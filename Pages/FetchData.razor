@page "/fetchdata"
@inject HttpClient Http

<PageTitle>My projects from GitHub</PageTitle>

<section class="resume-section">
    <div class="resume-section-content">
        <p>This page fetches public repositories data from my GitHub account: <strong>pelinski46</strong></p>

         @if (repositories == null)
        {
            <p><em>Loading GitHub repositories...</em></p>
        }
        else
        {

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var repo in repositories)
                {
                 <tr>
                     <td>
                         <a target="_blank" rel="noopener" href="@repo.HTML_URL">
                             @repo.Full_Name
                         </a>
                     </td>
                     <td>@repo.Description</td>
                 </tr>   
                }
            </tbody>
        </table>
    }
    </div>
</section>



